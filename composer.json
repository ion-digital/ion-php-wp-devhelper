{
    "name": "ion/wp-helper",
    "type": "library",
    "description": "A library that abstracts and simplifies WordPress development - it can also function as an installed WordPress plug-in, providing additional tools to aid in development.",
    "keywords": [
        "WP",
        "WPHelper",
        "WP Helper",
        "wp-helper",
        "WordPress",
        "WordPressHelper",
        "WordPress Helper",
        "WordPress",
        "WordPress Plugin",
        "WordPress Plugins",
        "WordPress Theme",
        "WordPress Themes",
        "logging"
    ],
    "homepage": "https://wpsolved.io/helper",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Justus Meyer",
            "role": "developer",
            "homepage": "https://bitbucket.org/justusmeyer/",
            "email": "jus@wpsolved.io"
        }
    ],
    "support": {
        "issues": "https://bitbucket.org/justusmeyer/wp-helper/issues"
    },
    "require": {
        "php": ">=5.6",    
        "ion/core": "^0.12",
        "psr/log": "1.0.2",
        "erusev/parsedown": "^1.7.1"
    },
    "require-dev": {
        "ion/dev": "@dev",
        "kint-php/kint": "^3.2"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../ion-dev/"
        }
    ],      
    "autoload": {
        "files": [
            "bootstrap.php"
        ]
    },
    "minimum-stability": "dev"
}
